<h1>お天気予報&nbsp;<small><%= link_to 'お天気情報はこちら', weathers_path %></small></h1>
<div class='col-xs-4'>
  <div class='form row'>
    <%= simple_form_for :search, url: search_forecasts_path, method: :get do |f| %>
      <div class='form_input col-xs-6'>
        <%= f.input :prefectures,
                    as: :select,
                    input_html: { class: 'form-controll input-lg' },
                    include_blank: false,
                    label: false,
                    selected: @result['city']['name'].downcase,
                    collection: SearchForm::SEARCH_KEY %>
      </div>
      <div class='form_btn col-xs-6'>
        <%= f.button :submit, '検索', class: 'btn btn-info btn-lg' %>
      </div>
    <% end %>
  </div>
</div>
<div class='col-xs-8'>
  <div id='result'><%= render partial: 'result' %></div>
</div>
